<div class="logo">
  <%= image_tag "tokyo-rails-600x290.png", :alt => 'TOKYO Rails Meetup' %>
</div>
<div class="hero-unit">

  <div class="well">
    <div class="event-date">
      <div class="event-month">May</div>
      <div class="event-day">10</div>
    </div>
    <div class="event-details">
      <div class="title">TOKYO Rails Meetup #10 @ COOKPAD</div>
      <div class="subtitle">Thursday, May 10th, 2012 7.30pm</div>
      <div class="rsvp"><%= link_to t('.register'), "http://meetup.com/tokyo-rails/events/59784102/", :class => "btn btn-success btn-large pull-right" %></div>
    </div>
  </div>

  <p><%= t '.intro1' %></p>

  <ul class="thumbnails">
    <li>
      <%= link_to image_tag("crowd-180.jpg"), "#", :class => "thumbnail" %>
    </li>
    <li>
      <%= link_to image_tag("tofu-180.jpg"), "#", :class => "thumbnail" %>
    </li>
    <li>
      <%= link_to image_tag("info-180.jpg"), "#", :class => "thumbnail" %>
    </li>
    <li>
      <%= link_to image_tag("roomba-180.jpg"), "#", :class => "thumbnail" %>
    </li>
  </ul>

  <p><%= t '.intro3' %></p>

</div>

<div class="row">

  <div class="span4">
    <h2><%= t '.members.title' %></h2>
    <p><%= t '.members.brief' %>
    <p><%= link_to t('.more.html'), members_path, :class => "btn" %></p>
  </div>

  <div class="span4">
    <h2><%= t '.meetups.title' %></h2>
    <p><%= t '.meetups.brief' %></p>
    <p><%= link_to t('.more.html'), events_path, :class => "btn" %></p>
  </div>

  <div class="span4">
    <h2><%= t '.projects.title' %></h2>
    <p><%= t '.projects.brief' %></p>
    <p><%= link_to t('.more.html'), "#", :class => "btn" %></p>
  </div>

</div>
